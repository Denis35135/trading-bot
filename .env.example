# ============================================
# CONFIGURATION AUTOBOT ULTIMATE
# ============================================
# Copier ce fichier en .env et remplir vos valeurs

# MODE
MODE=paper  # 'paper' ou 'live'

# BINANCE API KEYS
# Obtenir sur: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# TESTNET (pour paper trading)
BINANCE_TESTNET=true  # true pour testnet, false pour production

# CAPITAL INITIAL
INITIAL_CAPITAL=1000  # En USDC

# BASE DE DONNÉES (optionnel)
# Pour SQLite, laisser vide (par défaut: data/bot.db)
DATABASE_URL=

# REDIS (optionnel - pour cache)
# Si non configuré, cache en mémoire sera utilisé
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# NOTIFICATIONS (optionnel)
# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Email
EMAIL_SMTP_SERVER=
EMAIL_SMTP_PORT=587
EMAIL_FROM=
EMAIL_TO=
EMAIL_PASSWORD=

# MONITORING
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
SAVE_INTERVAL=300  # Secondes entre chaque sauvegarde

# ADVANCED
MAX_MEMORY_MB=2000  # Limite mémoire
MAX_CPU_PERCENT=80  # Limite CPU
